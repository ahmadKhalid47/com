<%-include('mainHeader')-%>
<div class="bg-light">
    <h1 class="display-4 container-sm">Top deals</h1>
    <div class="mx-auto container-fluid">
        <div class="row my-4">
            <%for(let i=0; i<info_obj.homeDetails.length; i++){%>
                <a class=" col-lg-4 col-md-6 col-sm-6 col-12" style="text-decoration: none;" href="/ProductDetails/<%=info_obj.homeDetails[i]._id%>/<%=info_obj._id%>">
                    <div class="p-4" style="cursor: pointer;">
                        <div class="card p-4">
                            <img src="/<%=info_obj.homeDetails[i].Image%>" class="card-img-top border-bottom" style="width: 100%; height: 100%;">
                            <div class="card-body">
                                <h4 class="card-text"><%=info_obj.homeDetails[i].Details%></h4>
                                <p class="card-text display-4">Price: <%=info_obj.homeDetails[i].Price%>$</p>
                                <p class="display-6">Rating: <%=info_obj.resultRating[i]%></p>
                            </div>
                        </div>
                    </div>
                </a>
            <%}%>
        </div>
    </div>
</div>
<%-include('mainFooter')-%>